<!DOCTYPE html>
<html>
  	<%- include('common/header.ejs',{}) %>
    <style>
        .dataTables_length {
            margin-bottom: 20px;
        }
        .dataTables_filter {
            text-align: right;
        }
        .input-sm {
            height: auto !important;
        }
        .dataTables_paginate {
            text-align: right;
            font-size: 12px !important;
        }
    </style>
  	<body class="hold-transition skin-blue sidebar-mini">
    	<div class="wrapper">
      		<%- include('common/headerSide.ejs',{module:'finance'}) %>

      		<!-- Content Wrapper. Contains page content -->
      		<div class="content-wrapper">
        		<!-- Content Header (Page header) -->
        		<section class="content-header">
          			<h1>
            			财务管理
            			<small>Finance Manage Page</small>
          			</h1>
          			<ol class="breadcrumb">
            			<li><i class="fa fa-dashboard"></i> 系统控制台</li>
                        <li class="active"><a href="#"><i class="fa fa-bar-chart"></i> 财务管理</a></li>
            			<li class="active"><a href="#"><i class="fa fa-circle-o"></i> 财务分析</a></li>
          			</ol>
        		</section>

                <!-- Main content -->
        		<section class="content">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="box">
                                <div class="box-header">
                                    <h3 class="box-title">
                                        收支统计
                                    </h3>
                                    <div class="category-select">
                                        <label style="margin-bottom:0;margin-top:4px;">分类筛选</label>
                                        <select class="category-select" id="J_category">
                                            <option data-id="all">显示全部</option>
                                            <option data-id="1">餐厅动态</option>
                                            <option data-id="2">趣闻轶事</option>
                                            <option data-id="3">优惠活动</option>
                                            <option data-id="4">企业文化</option>
                                        </select>
                                    </div>
                                </div><!-- /.box-header -->
                                <div class="box-body">
                                    <table id="J_data-list" class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>推送标题</th>
                                                <th>推送主图</th>
                                                <th>推送类型</th>
                                                <th>推送时间</th>
                                                <th>操作</th>
                                            </tr>
                                        </thead>
                                        <tbody id="J_data-items">
                                        </tbody>
                                    </table>
                                </div><!-- /.box-body -->
                            </div><!-- /.box -->
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </section>
            </div>

            <!-- food items template -->
            <script type="text/template" id="J_tpl-data-items" >
                {@each items as item}
                <tr>
                    <td>${item.title}</td>
                    <td><img src="${item.img}" style="width:50px;" /></td>
                    <td>${item.category}</td>
                    <td>${item.uptime}</td>
                    <td>
                        <div class="btn-group">
                            <button type="button" data-id="${item.id}" class="btn btn-sm btn-default J_btn-edit"><i class="fa fa-edit"></i> 编辑</button>
                            <button type="button" data-id="${item.id}" class="btn btn-sm btn-danger J_btn-delete"><i class="fa fa-close"></i> 删除</button>
                        </div>
                    </td>
                </tr>
                {@/each}
            </script>
            <!--/ food item template -->

            <%- include('common/footer.ejs',{module:'finance-statist'}) %>
        </div>
    </body>
</html>
