<!DOCTYPE html>
<html>
	<%- include('./common/head.ejs', { module: "order" }) %>
<body>

	<section class="container easeInLeft animated-zing" id="J_container">
		<!-- /datepicker -->
		<section class="datepicker" id="J_datepicker"></section>
		<!-- /datepicker -->

		<!-- /form -->
		<section class="form">
			<div class="input-number">
				<span>选择人数</span>
				<select>
					<option>1人</option>
					<option>2人</option>
					<option>4人</option>
					<option>8人</option>
					<option>8人以上</option>
				</select>
			</div>
			<div class="input-name">
				<input type="text" placeholder="姓名" />
				<div class="sex" id="J_sex">
					<span class="active"><i class="icon-ok-sign"></i>先生</span>
					<span><i class="icon-ok-sign"></i>女士</span>
				</div>
			</div>
			<div class="input-phone">
				<input type="tel" placeholder="联系方式" />
			</div>
		</section>
		<!-- /form -->

		<!-- submit -->
		<div class="submit" id="J_submit">提交预定</div>
		<!-- /submit -->
	</section>

	<!-- mask -->
	<div class="mask hidden" id="J_mask">
		<div class="main slideInUp animated-zing">
			<i class="icon-remove" id="J_mask-close"></i>
			<h3>晚餐</h3>
			<ul>
				<li class="active time-item">16:00</li>
				<li class="time-item">16:30</li>
				<li class="time-item">17:00</li>
				<li class="time-item">17:30</li>
				<li class="time-item">18:00</li>
				<li class="time-item">18:30</li>
				<li class="time-item">19:00</li>
				<li class="time-item">19:30</li>
				<li class="time-item">20:00</li>
				<li class="time-item">20:30</li>
				<li class="time-item">21:00</li>
			</ul>
		</div>
	</div>
	<!-- /mask -->
	
	<!-- datepicker template -->
	<script type="text/template" id="datepicker-tpl">
		<h2 class="title">时间</h2>
		<div class="controller">
			<table class="dateList">
				<thead>
					<tr>
						<th>日</th>
						<th>一</th>
						<th>二</th>
						<th>三</th>
						<th>四</th>
						<th>五</th>
						<th>六</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td><span class="date active">29</span></td>
						<td><span class="date">28</span></td>
						<td><span class="date">29</span></td>
						<td><span class="date">30</span></td>
						<td><span class="date">31</span></td>
						<td><span class="date">1</span></td>
						<td><span class="date">2</span></td>
					</tr>
					<tr>
						<td><span class="date">3</span></td>
						<td><span class="date">4</span></td>
						<td><span class="date">5</span></td>
						<td><span class="date">6</span></td>
						<td><span class="date">7</span></td>
						<td><span class="date">8</span></td>
						<td><span class="date">9</span></td>
					</tr>
				</tbody>
			</table>
			<div class="time">
				<span id="J_timer">19:00</span>
				<span id="J_btn-time">选择时间</span>
			</div>
		</div>
	</script>
	<!-- /datepicker template -->
	
	<!-- footer -->
	<%- include('./common/footer.ejs', { module: "order" }) %>	
	<!-- /footer -->

</body>
</html>

